<%= form_for(resource, html: {class: "well form-inline"}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.email_field :email, class: "input-small", placeholder: "Email" %>
  <%= f.password_field :password, class: "input-small", placeholder: "Password"%>
  <% if devise_mapping.rememberable? %>
    <label class="checkbox"><%= f.check_box :remember_me, style: "display:inline" %>Remember me</label>
  <% end %>
  <%= f.submit "Sign in", class: "btn" %>
<% end %>

