= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  
  .field
    = f.label :message, "Make a new Post!"
    = f.text_area :message, rows: 3, style: "resize:none; width:99%"
  .actions
    = f.submit "Post", class: "btn"          
